{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2020",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
